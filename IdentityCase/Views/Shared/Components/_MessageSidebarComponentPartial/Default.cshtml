
<div class="nk-sidebar" style="top:1rem; border-radius:5px">
    <div class="email-left-box">
        <a href="/Message/CreateMessage" class="btn btn-primary btn-block" style="margin-top:10px">Yeni Mesaj Oluştur</a>
        <div class="mail-list mt-4">
            <a href="/Message/Inbox" class="list-group-item border-0 text-primary p-r-0">
                <i class="fa fa-inbox font-18 align-middle mr-2"></i>
                <b>Gelen Kutusu</b>
                <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.inboxCount</span>
            </a>
            <hr />
            <a href="/Message/SendBox" class="list-group-item border-0 p-r-0">
                <i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Gönderilenler
            </a>
            <hr />

            <a href="/Message/TrashBox" class="list-group-item border-0 p-r-0">
                <i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu
            </a>
            <hr />

        </div>

        <h5 class="mt-5 m-b-10">Ayarlar</h5>
        <hr />

        <div class="list-group mail-list">
            <a href="/Message/Profile" class="list-group-item border-0">
                <span class="fa fa-user f-s-14 mr-2"></span>Profilim
            </a>
            <hr />

            <a href="#" class="list-group-item border-0">
                <span class="fa fa-sign-in f-s-14 mr-2"></span>Giriş Yap
            </a>
            <hr />

            <form asp-controller="Login" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Çıkış</button>
            </form>
            <hr />

          
        </div>
    </div>
</div>
