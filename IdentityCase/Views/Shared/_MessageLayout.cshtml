@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

@await Component.InvokeAsync("_MessageHeaderComponentPartial")

<body>

    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>

    <div id="main-wrapper">

        @await Component.InvokeAsync("_MessageSidebarComponentPartial")


        <div class="content-body">
            @RenderBody()
        </div>

        @await Component.InvokeAsync("_MessageFooterComponentPartial")

    </div>

    @await Component.InvokeAsync("_MessageScriptsComponentPartial")


    @RenderSection("Scripts", required: false)

</body>

</html>
